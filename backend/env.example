# 环境变量示例文件
# 复制此文件为 .env 并修改值
# cp env.example .env

# 服务器配置
NODE_ENV=development
PORT=3000

# 数据库配置 (PostgreSQL)
DATABASE_URL=postgresql://taskmanager:taskmanager_password@localhost:5432/taskmanager_db?schema=public

# Redis 配置（可选）
REDIS_URL=redis://:redis_password@localhost:6379

# AI 服务配置（示例，不包含真实密钥）
AI_API_KEY=your_api_key_here
AI_API_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4

# JWT 配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# 日志级别
LOG_LEVEL=debug

